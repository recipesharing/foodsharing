<style media="screen">
  .image_div { background-image: url(<%= recipe.background_image %>); }
</style>

  <div class="col-centered">
    <div class="image_div" style="width: 100%; height: 650px">
      <div style="background-color: rgba(36,38,84,0.9); padding: 12px 14px">
        <h2 class="white-text"><%= recipe.name %></h2>
        <h3 class="white-text"><%= recipe.short_description %></h3>
      </div>
      <div class="card card-block col-md-5" style="margin: 20px; border: none">
        <p><%= "thời gian nấu: #{recipe.cooking_time_min} phút" %></p>
        <p><%= "suất ăn #{recipe.serving_num} người"%></p>
        <br>
        <p><%= recipe.description %></p>
        <%= social_share_button_tag(recipe.name) %>
      </div>
    </div>
  </div>
